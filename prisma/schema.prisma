generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]

  @@map("stores")
}

model Product {
  id        Int       @id @default(autoincrement())
  name      String
  price     Float
  embedding Decimal[]

  storeId Int   @map("store_id")
  store   Store @relation(fields: [storeId], references: [id])

  @@map("products")
}
